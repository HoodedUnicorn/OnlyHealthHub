        app:layout_constraintTop_toBottomOf="@+id/textViewOnc" />

    <TextView
        android:id="@+id/textViewGP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:text="@string/attending_physician"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDadPhone" />

    <TextView
        android:id="@+id/textViewGPName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="@string/name_dr_visser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGP" />

    <TextView
        android:id="@+id/textViewGPPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="@string/_050_5078338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGPName" />

    <TextView
        android:id="@+id/textViewDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:text="@string/hospital_departments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGPPhone" />

    <TextView
        android:id="@+id/textViewDadInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="@string/name_dhr_van_den_berg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDad" />

    <TextView
        android:id="@+id/text_patient_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOncPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>
